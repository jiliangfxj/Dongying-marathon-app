/*柱状图*/
.graph{
  width: 690rpx;
  height: 423rpx;
  margin: 42rpx auto 20rpx;
  background: #1c8d9f; /* 一些不支持背景渐变的浏览器 */
  background:-webkit-gradient(linear, 0 0, right bottom, from(#2cbb85), to(#1c8d9f));
  border-radius: 8rpx;
  position: relative;
}
.graph-head{
  width: 82%;
  height: 76rpx;
  line-height: 76rpx;
  margin: 0 auto;
  color: #fff;
  font-size: 30rpx;
  position: relative;
}
.graph-head-today{
  position: absolute;
  font-size: 22rpx;
  line-height: 30rpx;
  height: 30rpx;
  top: 32rpx;
  right: -20rpx;
  color: #fff;
}
/*柱状图content*/
.graph-content{
  width: 653rpx;
  height: 300rpx;
  margin: 0 auto;
  background:-webkit-gradient(linear, 0 0, 0 bottom, from(transparent), to(rgba(255,255,255,.1)));
  position: relative;
}
/*柱子*/
.graph-content-bar{
  border-radius: 6rpx;
  background: rgba(255,255,255,.5);
  position: absolute;
  bottom: 0;
  left: 50%;
  margin-left: -6rpx;
  width: 12rpx;
  height: 0;
  transition: height 500ms;
}
/*柱子外层包裹*/
.graph-content-bar-wrap{
  width: 50rpx;
  margin-left: -18rpx;
  position: absolute;
  top: 0;
  height: 100%;
}
/*y轴线*/
.graph-content-line{
  position: absolute;
  left: 7%;
  width: 86%;
  height: 0;
}
.line1{
  top: 0;
  border-bottom: 1rpx dotted #fff;
}
.line2{
  top: 25%;
  border-bottom: 1rpx dotted rgba(255,255,255,0.5);
}
.line3{
  top: 50%;
  border-bottom: 1rpx dotted rgba(255,255,255,0.5);
}
.graph-content-line text{
  display: block;
  position: absolute;
  top: -50%;
  left: 102%;
  color: #fff;
  width: 28rpx;
  height: 28rpx;
  line-height: 28rpx;
  font-size: 22rpx;
  margin-top: -14rpx;
}
/*列表共通*/
.graph-li{
  font-size: 22rpx;
  position: absolute;
  line-height: 1;
  text-align: center;
}
.bar-left-0{
  left: 50rpx;
}
.bar-left-1{
  left: 140rpx;
}
.bar-left-2{
  left: 230rpx;
}
.bar-left-3{
  left: 320rpx;
}
.bar-left-4{
  left: 410rpx;
}
.bar-left-5{
  left: 500rpx;
}
.bar-left-6{
  left: 590rpx;
}
/*步数*/
.graph-content-step{
  position: absolute;
  margin-left: -38rpx;
  text-align: center;
  top: 100%;
  color: #fff;
  transition: all 500ms;
  width: 90rpx;
  font-size: 22rpx;
  opacity: 0;
}
.top-2percent{
  top: 2rpx;
  opacity: 1;
}
/*日期*/
.graph-date view{
  margin-left: -30rpx;
  bottom: 13rpx;
  color: #fff;
  color: rgba(255,255,255,.5);
  width: 110rpx;
}