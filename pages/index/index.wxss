/**index.wxss**/

.container{
  height: 1500rpx;
}
.container .search{
  width: 735rpx;
  height: 65rpx;
  padding: 12.5rpx 0 12.5rpx 15rpx;

  background: #FF2534;
}
.container .search-left{
  flex: 8;

   background: #FF2534;
  text-align: left;
}
.container .search-left input{
  display: inline-block;
  height: 65rpx;
  font-size: 26rpx;
}
.search-placeholder{

   background: #FF2534;
  line-height: 20rpx;
}
.container .search .search-left image{
  display: inline-block;
  width: 35rpx;
  height: 35rpx;
  padding: 15rpx 15rpx 15rpx 20rpx;
}
.container .search .search-right{
  flex: 1;
}
.container .search .search-right image{
  width: 45rpx;
  height: 45rpx;
  padding: 10rpx;
}

.container{
  padding: 0;
  font-size: 14rpx;
  background: #F0F4F3;
  color: #000;
}



.ind-1{
  width:100%;
  height: 30%;
  margin-bottom: 40px;
  border: 0.1rem rgb(181, 185, 184) solid;
}
.ind-1 button{
  display:inline-block;
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  border-radius: 0;
}
.ind-1 button image{
  width: 100%;
  height: 100%;
}
.ind-1 .ind-txt-1{
  font-size: 35rpx;
  font-weight: 400;
  padding-left: 10rpx;
}
.ind-1 .ind-txt-2{
  font-size: 30rpx;
  color:rgb(184, 179, 179);
  float: right;
  margin-right: 40rpx;
}


.ind-end{
  font-size: 45rpx;
  font-weight: bold;
  color: #ccc;
  text-align: center;
}
/*feed-item part is in app.wxss for multiplexing*/